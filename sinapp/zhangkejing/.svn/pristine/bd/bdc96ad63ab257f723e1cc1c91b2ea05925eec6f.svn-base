*{margin: 0; padding: 0;}

body{background: url(img/bg.png) no-repeat center center;}

.container{width: 100%; overflow: hidden;}

.rom{background: url(img/rom.png) no-repeat center center;
	width:90%;height:90%;background-size: 90%;margin-left: 5%;
	}

.disk{background: url(img/monv.png) no-repeat center center;
	width:90%;height:90%;background-size: 63%;margin-left: 5%;
	position: absolute;left: 0%;top:-50%;}

.put{-webkit-transition: all  0.5s ease-out;
	left: 0%;top:-1%;}

.play{-webkit-animation: run 1.5s infinite linear;}

@-webkit-keyframes run {
	0%{-webkit-transform: rotate(0deg)}
	100%{-webkit-transform: rotate(360deg)}
}