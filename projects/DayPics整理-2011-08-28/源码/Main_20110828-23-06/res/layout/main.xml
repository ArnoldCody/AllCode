<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:background="@drawable/bg"
    android:gravity="center_horizontal">
    <ImageView android:id="@+id/logo" android:src="@drawable/logo" android:layout_height="188px" android:layout_width="188px"  android:layout_marginTop="140px" ></ImageView>
    <ImageView android:id="@+id/text" android:layout_width="106px" android:src="@drawable/text" android:layout_height="wrap_content"  android:layout_marginTop="8px"></ImageView>
    <LinearLayout android:id="@+id/linearLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_horizontal"  android:layout_marginTop="95px">
        <ImageButton android:background="@drawable/web" android:scaleType="centerInside" android:layout_width="112px" android:layout_height="155px" android:id="@+id/WebBtn" android:layout_margin="14px"></ImageButton>
        <ImageButton android:background="@drawable/camera" android:scaleType="centerInside"  android:layout_width="112px" android:layout_height="155px" android:id="@+id/PhotoBtn" android:layout_margin="14px"></ImageButton>
        <ImageButton android:background="@drawable/gallery" android:layout_width="112px" android:layout_height="155px" android:id="@+id/GalleryBtn" android:layout_margin="14px"></ImageButton>
    </LinearLayout>
    <TextView android:text="By Ronaldinho 2011" android:id="@+id/copyright" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10px" android:textStyle="bold" android:textColor="#a7d4ea"  android:layout_marginTop="105px"></TextView>
</LinearLayout>
