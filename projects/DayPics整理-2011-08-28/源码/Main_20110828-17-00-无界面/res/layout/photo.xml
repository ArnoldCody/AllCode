<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <ImageView android:layout_height="wrap_content" android:id="@+id/myImage" android:layout_weight="0.69" android:layout_width="match_parent"></ImageView>
<EditText android:layout_width="match_parent" android:id="@+id/words" android:layout_height="wrap_content" android:inputType="textMultiLine" android:layout_weight="0.08">
    <requestFocus></requestFocus>
</EditText>
<Button android:text="上传" android:id="@+id/upload" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>